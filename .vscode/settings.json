{
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "editor.formatOnSave": true,
  "prettier.bracketSameLine": false,
  "prettier.configPath": "./picker-app/.prettierrc",
  "prettier.prettierPath": "./picker-app/node_modules/prettier",
  "eslint.packageManager": "yarn",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.stylelint": true
  },
  "stylelint.configBasedir": "./picker-app",
  "stylelint.configFile": "./picker-app/.stylelintrc.js",
  "stylelint.packageManager": "yarn",
  "stylelint.stylelintPath": "./picker-app/node_modules/stylelint",
  "stylelint.customSyntax": "@stylelint/postcss-css-in-js",
  "stylelint.validate": ["css", "less", "postcss", "scss", "postcss-css-in-js", "typescriptreact", "javascriptreact"],
  "stylelint.snippet": ["css", "less", "postcss", "tsx", "postcss-css-in-js", "typescriptreact", "javascriptreact"]
}
